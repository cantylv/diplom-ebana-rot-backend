# POSTGRES
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DATABASE=service
POSTGRES_PORT=5432
POSTGRES_CONNECTION_HOST=localhost
POSTGRES_SSLMODE_ENABLED=disable

# SERVER
SERVER_ADDRESS=:8000
SERVER_PORT=8000
SERVER_WRITE_TIMEOUT=5s
SERVER_READ_TIMEOUT=5s
SERVER_IDLE_TIMEOUT=3s
SERVER_SHUTDOWN_DURATION=5s

# GOOSE 
GOOSE_DRIVER=postgres
GOOSE_DBSTRING="postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:${POSTGRES_PORT}/${POSTGRES_DATABASE}?sslmode=${POSTGRES_SSLMODE_ENABLED}"
GOOSE_MIGRATION_DIR=migrations

# PGADMIN
PGADMIN_DEFAULT_EMAIL=admin@mail.ru
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_PORT_EXTERNAL=82
PGADMIN_PORT_INTERNAL=80